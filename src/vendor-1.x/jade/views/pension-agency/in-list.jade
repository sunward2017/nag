.col-xs-12.text-center(block-ui="list-block")
    .row
        form.form-search
            .input-group.pull-right.page-search
                label.input-group-addon {{'grid.LABEL-SEARACH'|translate}}
                input.form-control(type="text",ng-model="vm.filter.$", ng-keypress="vm.searchByKeyword(vm.filter.$, $event)")
                a.input-group-addon.btn.btn-primary(ng-click="vm.searchByKeyword(vm.filter.$)")
                  i.glyphicon.glyphicon-search
                  | {{'button.QUERY'|translate}}
    .row-split
    .row
        .panel.panel-default.panel-grid
            table.grid.table.table-bordered.table-hover.table-striped
                thead
                    tr
                        th.text-center(check-all,width="30")
                            .checkbox.c-checkbox(data-toggle="tooltip",data-title="Check All")
                                label(ng-click="vm.selectAll($event)")
                                    input(type='checkbox')
                                    span.fa.fa-check
                        th.text-center(ng-repeat="column in vm.columns",width="{{column|width}}",ng-hide="column|hide",ng-click="vm.sort.toggle(column)",ng-class="{sortable: column.sortable !== false}")
                            | {{column.label}}
                            i.glyphicon(ng-if="column.name === vm.sort.column && vm.sort.direction",ng-class="vm.sort.direction|orderClass")
                tbody
                    tr(ng-class="{true: 'begin_exit_flow'}[row.begin_exit_flow]", ng-repeat="row in vm.rows|orderBy:vm.sort.column:vm.sort.direction===-1|paging:vm" , ng-click="vm.selectRow($event,row)",ng-dblclick="vm.dblclickRow(row.id)")
                        td
                            .checkbox.c-checkbox
                                label
                                    input(type='checkbox' data="trBubble" ng-model="row.checked" )
                                    span.fa.fa-check(data="trBubble")
                        td.text-left
                            | {{::row.name}}
                            a.btn.btn-primary.btn-xs.pull-right(title="{{ vm.viewTranslatePath('TITLE-ARCHIVE') | translate}}",ng-click="vm.readElderlyArchive(row)") {{ vm.viewTranslatePath('LABEL-ARCHIVE') | translate}}
                        td {{::row.sex|formatter:'sex':vm.columns}}
                        td {{::row.birthday|calcAge}}
                        td.text-left {{::row.enter_code}}
                        td {{::row.board_summary}}
                        td {{::row.room_summary}}
                        td {{::row.nursing_info}}
                        td {{::row.begin_exit_flow|formatter:'begin_exit_flow':vm.columns}}
                        td
                            .btn-group
                                a.btn.btn-primary.btn-xs(title="{{'button.READ'|translate}}",ng-click="vm.read(row._id)")
                                    i.glyphicon.glyphicon-search
                            .btn-group(ng-if="!row.begin_exit_flow")
                                a.btn.btn-primary.btn-xs(title="{{'button.EDIT'|translate}}",ng-click="vm.edit(row._id)")
                                    i.glyphicon.glyphicon-pencil
                            .btn-group
                                a.btn.btn-primary.btn-xs(title="{{ 'button.GEN' | translate}}",ng-click="$state.go(vm.transTo.qrcode,{_id:row._id})")
                                    i.glyphicon.glyphicon-qrcode
                            .btn-group
                                a.btn.btn-primary.btn-xs(title="{{'button.CONFIG'|translate}}",ng-click="$state.go(vm.transTo.inConfig,{_id:row._id})")
                                    i.glyphicon.glyphicon-cog
                    tr(ng-if="vm.paged.length==0")
                        td(colspan="{{utils.noResultsColspan(vm)}}") {{ 'grid.NO-RESULTS' | translate}}
            .panel-footer
                .row
                    .col-md-4.text-left
                        .btn-toolbar
                            .btn-group
                                a.btn.btn-success.btn-sm(ng-click="vm.exportExcelForEldelryPrintQRLabel()") {{ vm.viewTranslatePath('BTN-EXPORT-EXCEL-FOR-ELDERLY-PRINT-QR-LABEL') | translate}}
                            .btn-group
                                a.btn.btn-success.btn-sm(ng-click="vm.batchCreatePy()") {{ vm.viewTranslatePath('BTN-BATCH-CREATE-ELDERLY-PY') | translate}}
                    .col-md-8
                        pagination.pagination-sm.pull-right(total-items="vm.page.totals",ng-model="vm.page.no",max-size="5",items-per-page="vm.page.size",boundary-links="true" ,ng-change="vm.paging()")