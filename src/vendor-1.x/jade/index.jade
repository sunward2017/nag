doctype html
html(lang="en", data-ng-app="nag")

  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

    meta(name='description', content='{{app.description}}')
    meta(name='keywords', content='app, responsive, angular, bootstrap, dashboard, admin')

    title(data-ng-bind="currTitle") jade - Pension Integrated Admin Portal
    // Bootstrap styles
    link(rel='stylesheet', href='//cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css')
    // Application styles
    link(rel='stylesheet', href='app/css/app.css')
    link(rel='stylesheet', href='//at.alicdn.com/t/font_4pxr5zk86y0q9f6r.css')
  body(data-ng-class="{ 'layout-fixed' : app.layout.isFixed, 'aside-collapsed' : app.layout.isCollapsed, 'layout-boxed' : app.layout.isBoxed, 'layout-fs': app.useFullLayout, 'hidden-footer': app.hiddenFooter, 'layout-h': app.layout.horizontal, 'aside-float': app.layout.isFloat, 'offsidebar-open': app.offsidebarOpen, 'aside-toggled': app.asideToggled}")

    div(data-preloader)

    .wrapper(data-ui-view="main", data-autoscroll='false')

    div(data-ui-view="main-template")
    //div(data-ui-view="app-template")
    script(src='app/js/base.js')
    script(src='app/js/app.js')
    <!--[if lt IE 9]>
    <script src="vendor/respond/dest/respond.min.js"></script>
    <![endif]-->
